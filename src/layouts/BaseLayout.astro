---
import { Image } from 'astro:assets';
import Header from '../components/Header.astro';
import CompanyDarkLogo from '../assets/dark-logo.svg';
import CPSPLogo from '../assets/CPSP_logo_vert.png';
import NDISLogo from '../assets/DSIS_logo.png';
import MediLogo from '../assets/Medicare_Australia_logo.png';
import AuGovLogo from '../assets/logo__aus_gov_01.png';
import * as headings from '../texts/header.md';
import '../styles/global.css';
import '../styles/output.css';

const { title = "Home" } = Astro.props;
const siteName = "NMSP";
const fullTitle = title ? `${title} | ${siteName}` : "NMSP";
const { pathologist, contact_title, contact_message, email, phone, profession } = headings.frontmatter
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{fullTitle}</title>
	</head>
	<body class="beige-bg">
		<Header />
        <main>
		    <slot />
        </main>
	</body>

	<footer class="">
		<div class="w-full mx-auto flex flex-col justify-between">

			<!-- Contact Info -->
			<div class="dark-green-bg py-12 green-text text-center flex-1">
				<div class="ml-[10%] md:ml-[20%] w-[80%] md:w-[60%] mb-[20px] md:mb-[40px] xl:mb-[60px] beige-bg rounded-[190px] h-[50px] md:h-[80px] xl:h-[120px] ">
					<a href="/contact" class="green-text texgyre-font rounded-t-lg md:rounded-t-[1rem] xl:rounded-t-[2rem] transition-colors duration-200 text-center " >
						<h1 class="py-2 md:py-4 xl:py-6 text-2xl md:text-4xl xl:text-6xl ">{contact_title}</h1>
					</a>
				</div>
				<div class="beige-text text-[0.5rem] md:text-[1rem] xl:text-[1.43rem]">
					<p>{contact_message}</p>
					<p>
						<span class=font-semibold>Email:</span> <a href={`mailto::${email}`}>{email}</a> &emsp; &emsp; &emsp;
						<span class="font-semibold">Phone:</span> {phone}
					</p>
				</div>
			</div>

			<!-- Branding & Logos -->
			<div class="py-4 flex-1 space-y-2 text-center">
				<div class="flex justify-center">
					<Image src={CompanyDarkLogo} alt="NMPathology Logo Dark Version" class="h-[50px] md:h-[150px] xl:h-[250px] w-[50px] md:w-[150px] xl:w-[250px]" />
				</div>
				<h1 class="text-lg md:text-2xl xl:text-5xl font-bold">{pathologist}</h1>
				<h2 class="text-sm md:text-lg xl:text-3xl uppercase">{profession}</h2>
			</div>

			<!-- Logos -->
			<div class="py-10 grid grid-cols-4 w-[80%] translate-x-[15%] text-center">
				<div class="h-12 xl:h-24"> <Image src={CPSPLogo} alt="CPSP Logo" class="h-full w-[70%] object-contain" /> </div>
				<div class="h-12 xl:h-24"> <Image src={NDISLogo} alt="NDIS Logo" class="h-full w-[70%] object-contain" /> </div>
				<div class="h-12 xl:h-24"> <Image src={MediLogo} alt="Medicare Logo" class="h-full w-[70%] object-contain" /> </div>
				<div class="h-12 xl:h-24"> <Image src={AuGovLogo} alt="AUS Government Logo" class="h-full w-[70%] object-contain" /> </div>
			</div>
		</div>
	</footer>
</html>

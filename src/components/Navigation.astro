---
const currentPath = Astro.url.pathname;
import '../styles/global.css';
import '../styles/output.css';
---
<div class="responsive-spacer responsive-nav-text flex justify-center items-center w-full max-full mx-auto">
  <div class="w-1/3 flex justify-center">
    <a href="/" class={`responsive-nav-px responsive-nav-py responsive-nav-radius transition-colors duration-200 text-center hover:bg-green-900 hover:text-white ${ currentPath === '/' ? 'active' : '' }`} > Home </a>
  </div>

  <div class="w-1/3 flex justify-center">
    <a href="/services" class={`responsive-nav-px responsive-nav-py responsive-nav-radius transition-colors duration-200 text-center hover:bg-green-900 hover:text-white ${ currentPath === '/services' ? 'active' : '' }`} > Services </a>
  </div>

  <div class="w-1/3 flex justify-center">
    <a href="/contact" class={`responsive-nav-px responsive-nav-py responsive-nav-radius transition-colors duration-200 text-center hover:bg-green-900 hover:text-white ${ currentPath === '/contact' ? 'active' : 'right' }`} > Contact </a>
  </div>
</div>



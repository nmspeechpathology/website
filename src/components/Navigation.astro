---
const currentPath = Astro.url.pathname;
import '../styles/global.css';
import '../styles/output.css';
---
<div class="mt-3 heading-font uppercase md:mt-12 xl:mt-24 text-xs mobile:text-sm md:text-2xl xl:text-4xl flex justify-center items-center w-full max-full mx-auto ">
  <div class="w-1/3 flex justify-center ">
    <div class="transition-colors duration-200 text-center">
      <a href="/" class={` ${ currentPath === '/' ? 'px-4 md:px-8 xl:px-16 py-2 md:py-4 xl:py-8 rounded-t-lg md:rounded-t-[1rem] xl:rounded-t-[2rem] hover:bg-[rgba(18,43,18,1)] hover:text-[rgba(251,235,227,1)]  active' : 'px-4 md:px-8 xl:px-16 py-2 md:py-4 xl:py-8 rounded-t-lg md:rounded-t-[1rem] xl:rounded-t-[2rem] hover:bg-[rgba(18,43,18,1)] hover:text-[rgba(251,235,227,1)]  ' }`} > Home </a>
    </div>
  </div>

  <div class="w-1/3 flex justify-center ">
    <div class="px-4 md:px-8 xl:px-16 py-2 md:py-4 xl:py-8 rounded-t-lg md:rounded-t-[1rem] xl:rounded-t-[2rem] transition-colors duration-200 text-center">
      <a href="/services" class={` ${ currentPath === '/services' ? 'px-4 md:px-8 xl:px-16 py-2 md:py-4 xl:py-8 rounded-t-lg md:rounded-t-[1rem] xl:rounded-t-[2rem] hover:bg-[rgba(18,43,18,1)] hover:text-[rgba(251,235,227,1)]  active' : 'px-4 md:px-8 xl:px-16 py-2 md:py-4 xl:py-8 rounded-t-lg md:rounded-t-[1rem] xl:rounded-t-[2rem] hover:bg-[rgba(18,43,18,1)] hover:text-[rgba(251,235,227,1)]  ' }`} > Services </a>
    </div>
  </div>

  <div class="w-1/3 flex justify-center ">
    <div class="px-4 md:px-8 xl:px-16 py-2 md:py-4 xl:py-8 rounded-t-lg md:rounded-t-[1rem] xl:rounded-t-[2rem] transition-colors duration-200 text-center">
      <a href="/contact" class={` ${ currentPath === '/contact' ? 'px-4 md:px-8 xl:px-16 py-2 md:py-4 xl:py-8 rounded-t-lg md:rounded-t-[1rem] xl:rounded-t-[2rem] hover:bg-[rgba(18,43,18,1)] hover:text-[rgba(251,235,227,1)]  active' : 'px-4 md:px-8 xl:px-16 py-2 md:py-4 xl:py-8 rounded-t-lg md:rounded-t-[1rem] xl:rounded-t-[2rem] hover:bg-[rgba(18,43,18,1)] hover:text-[rgba(251,235,227,1)]  ' }`} > Contact </a>
    </div>
  </div>
</div>



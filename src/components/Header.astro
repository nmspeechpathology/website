---
import { Image } from 'astro:assets';
import Navigation from './Navigation.astro';
import CompanyLogo from '../assets/logo.svg';
import * as headings from '../texts/header.md';
import '../styles/global.css';
import '../styles/output.css';

const { pathologist, profession } = headings.frontmatter
---
<header>
  <nav>
	<!-- Branding & Logos -->
	<div class="flex-1 space-y-4 text-center">
		<div class="flex justify-center">
			<Image src={CompanyLogo} alt="NMPathology Logo Dark Version" class="h-[10%] w-[10%]" />
		</div>
		<h1 class="global-header-text">{pathologist}</h1>
		<h2 class="global-sub-header-text py-[20px] uppercase">{profession}</h2>
	</div>
    <Navigation />
  </nav>
</header>